{
  "config": {
    "target": "http://localhost:8080/",
    "phases": [
      {
        "duration": 1,
        "arrivalRate": 1
      }
    ],
    "processor": "./queryGenerator.js",
    "defaults": {
      "headers": {
        "Authorization": "bearer <TOKEN>"
      }
    }
  },
  "scenarios": [
    {
      "name": "GraphQL Query load test",
      "flow": [
        {
          "function": "testCases"
        },
        {
          "loop": [
            {
              "post": {
                "url": "/",
                "json": {
                  "query": "{{ $loopElement.query }}"
                }
              }
            },
            {
              "log": "Sent a request to the {{ $loopElement.operation }}: {{ $loopElement.name }}"
            }
          ],
          "over": "cases"
        }
      ]
    }
  ]
}
