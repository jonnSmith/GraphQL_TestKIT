{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist/",
    "moduleResolution": "node",
    "lib": ["es2017", "esnext.asynciterable"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["./node_modules", "./types", "./bin", "./sandbox"],
  "include": ["./src/**/*.ts"]
}
